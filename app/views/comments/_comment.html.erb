<%= div_for comment do %>
  <header>
    <p>
      <b><%= comment.author  %></b> commented <%= time_ago_in_words(comment.created_at) %> ago
    </p>
  </header>
  <p><%= h(comment.body) %></p>
  <% if current_user %>
    <%= link_to 'Destroy', [@article, comment], method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
<% end %>
