<section id="comments">
  <header>
    <h3>Comments</h3>
  </header>
  <%= div_for comment do %>
    <header>
      <p class="sig">
        <a href="#"><%= comment.author  %></a>  on <%= comment.created_at  %>
      </p>
    </header>
    <p><%= h(comment.body) %></p>
    <%= link_to 'Destroy', [@article, comment], method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
</section>
