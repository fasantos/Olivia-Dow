<h3 class="grid_12">Listing users</h3>

<table class="grid_12">
  <thead>
    <tr>
      <th class="grid_2 alpha omega gama">Username</th>
      <th class="grid_3 alpha gama">Email</th>
      <th class="grid_2 alpha beta gama">Password</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <% @users.each do |user| %>
    <tbody>
      <tr>
        <td class="grid_2 omega"><p class="grid_2 beta omega"><%= user.username %></p></td>
        <td class="grid_3 beta"><p class="grid_3 beta omega"><%= user.email %></p></td>
        <td class="grid_2 beta"><p class="grid_2 beta omega"><%= user.password %></p></td>
        <td class="grid_5 alpha beta omega gama">
          <div class="navigation alpha beta omega gama">
            <%= link_to 'Show', user %> | <%= link_to 'Edit', edit_user_path(user) %> | 
            <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </td>
      </tr>
    </tbody>
 <% end %>
</table>

<br>
<div class="navigation">
  <%= link_to 'New User', new_user_path %>
</div>
