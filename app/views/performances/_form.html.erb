<div class="grid_12">
  <%= form_for(@performance) do |f| %>
    <% if @performance.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@performance.errors.count, "error") %> prohibited this performance from being saved:</h2>

        <ul>
        <% @performance.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :title, "Performance Title:" %><br>
      <%= f.text_field :title %>
    </div>
    <%= f.fields_for :images do |fi| %>
      <%= render "images/image_fields", :f => fi %>
    <% end %><br>
    <%= f.fields_for :acts do |fa| %>
      <%= render "acts/act_fields", :f => fa %>
    <% end %>
    <%= link_to_add_fields "Add act", f, :acts %><br><br>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>  
</div>

